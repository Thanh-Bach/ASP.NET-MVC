@model IEnumerable<Example01.Context.Product_2119110193>
@{
    ViewBag.Title = "Search";

}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 style="text-align:center">Kết Quả Tìm Kiếm</h2>

                            
                            <table class="table ">
                                <tr>
                                    <th>
                                        Tên
                                    </th>
                                    <th>
                                        Hình
                                    </th>
                                    
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Detail", "Product", new { id = item.Id})">
                                                @Html.DisplayFor(modelItem => item.Name)</a>
                                        </td>
                                        <td>
                                            <img style="width:50px;height:10%;" src="~/Content/images/items/@Html.DisplayFor(modelItem => item.Avatar)" alt="Alternate Text" />
                                        </td>
                                        
                                    </tr>
                                }
                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
